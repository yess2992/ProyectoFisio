          <div class="form-check-inline">
            <form action="/updatePac" method="POST">
              <div class="mb-3">
                <input id="id" name="id" value="<%= user.id %>" hidden>
                </div>
            </div>
            <div class="col-md-4">
              <iconify-icon icon="material-symbols:date-range" style="color: #7ABFA6;;"></iconify-icon>
               <input type="date" class="form-control" id="Fecha" name="Fecha" placeholder="Fecha" value="<%= user.Fecha %>">
              </div>
              <div class="col-md-4">
                <iconify-icon icon="tabler:clock-hour-3" style="color: #7ABFA6;;"></iconify-icon>
                 <input type="time" class="form-control" id="Hora" name="Hora" tabindex="2" placeholder="Hora" value="<%= user.Hora %>">
                </div>
            <br>
            <br>
            <div></div>
            <br>
            <h6>Datos Personales</h6>
            <div class="col-md-4">
              <iconify-icon icon="uil:user" style="color: #7ABFA6;;"></iconify-icon>
               <input type="text" class="form-control" id="NombreCompleto" name="NombreCompleto" tabindex="2" value="<%= user.NombreCompleto %>" placeholder="Nombre Completo">
              </div>
          <div class="col-md-4">
              <iconify-icon icon="bxs:id-card" style="color: #7ABFA6;;"></iconify-icon>
              <label for="TipoDocumento" class="form-label">Tipo de Documento</label>
              <select name="TipoDocumento" id="TipoDocumento" class="form-select" tabindex="3">
                <option <%= user.TipoDocumento=='Cédula de ciudadanía' ? "selected" : '' %> value="cc">Cédula de ciudadanía</option>
                <option <%= user.TipoDocumento=='Tarjeta de Identidad' ? "selected" : '' %> value="ti">Tarjeta de Identidad</option>
                <option <%= user.TipoDocumento=='Registro Civil' ? "selected" : '' %> value="rc">Registro Civil</option>
              </select>
          </div>
          <div class="col-md-4">
              <iconify-icon icon="ci:id-card" style="color: #7ABFA6;;"></iconify-icon>
              <input type="number" class="form-control" id="NumIdentificacion" name="NumIdentificacion" value="<%= user.NumIdentificacion %>" placeholder="Número de identificación" tabindex="4">
          </div>
          <div class="col-md-4">
              <iconify-icon icon="simple-icons:googlemaps" style="color: #7ABFA6;;"></iconify-icon>
              <input type="text" class="form-control" id="Direccion" name="Direccion" value="<%= user.Direccion %>" tabindex="5" placeholder="Dirección">
          </div>
          <br>
          <br>
          <div class="col-md-4">
              <iconify-icon icon="mdi:cake" style="color: #7ABFA6;;"></iconify-icon>
              <label for="FechaNacimiento" class="form-label">Fecha de Nacimiento</label>
              <input type="date" class="form-control" id="FechaNacimiento" name="FechaNacimiento" value="<%= user.FechaNacimiento %>" tabindex="6">
          </div>
          <div class="col-md-4">
              <iconify-icon icon="carbon:phone-voice-filled" style="color: #7ABFA6;;"></iconify-icon>
              <input type="number" class="form-control" id="Telefono" name="Telefono" value="<%= user.Telefono %>" placeholder="Teléfono" tabindex="7">
          </div>
          <div class="col-md-4">
              <iconify-icon icon="healthicons:i-schedule-school-date-time" style="color: #7ABFA6;;"></iconify-icon>
              <input type="number" class="form-control" id="Edad" name="Edad" value="<%= user.Edad %>" tabindex="8" placeholder="Edad">
          </div>
          <div class="col-md-4">
              <iconify-icon icon="ph:gender-intersex-bold" style="color: #7ABFA6;;"></iconify-icon>

              <label for="Sexo" class="form-label">Sexo</label>
              <select name="Sexo" id="Sexo" class="form-select" tabindex="9">
                <option <%= user.Sexo=='f' ? "selected" : '' %> value="Femenino">Femenino</option>
                <option <%= user.Sexo=='m' ? "selected" : '' %> value="Masculino">Masculino</option>
                <option <%= user.Sexo=='o' ? "selected" : '' %> value="Masculino">Masculino</option>
              </select>
          </div>
          <div class="col-md-4">
              <iconify-icon icon="ic:outline-work" style="color: #7ABFA6;;"></iconify-icon>
              <input type="text" class="form-control" id="Ocupacion" name="Ocupacion" value="<%= user.Ocupacion %>" placeholder="Ocupación" tabindex="10">
          </div>
          <div class="col-md-4">
            <iconify-icon icon="ic:twotone-health-and-safety" style="color: #7ABFA6;;"></iconify-icon>
